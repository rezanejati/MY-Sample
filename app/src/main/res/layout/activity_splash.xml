<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.activity.splash.SplashActivity"
    >


    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="nejati.me.bliss.viewModel.splash.SplashViewModel" />


    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lvLoading"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            app:lottie_autoPlay="true"
            android:layout_centerHorizontal="true"
            app:lottie_loop="true"/>

        <LinearLayout
            android:layout_below="@+id/lvLoading"
            android:id="@+id/llRetryAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="@{viewModel.showRertryLayout ? View.VISIBLE : View.GONE}"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="server not available right now" />

            <Button
                android:id="@+id/btnRetry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:textColor="@android:color/white"
                android:onClick="@{() -> viewModel.OnClickRetryAction()}"
                android:text="Retry" />

        </LinearLayout>



        <ImageView
            android:id="@+id/ivBlissLogo"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/bliss" />
    </RelativeLayout>
</layout>